<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="10dp"
    android:background="@drawable/bg_nav_drawer_item_selector">
    <ImageView
        android:id="@+id/iv_nav_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@android:drawable/ic_menu_gallery"/>
    <TextView
        android:id="@+id/tv_nav_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_nav_logo"
        android:textColor="@drawable/bg_nav_drawer_item_text_selector"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/tv_nav_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:textColor="@drawable/bg_nav_drawer_item_text_selector"
        android:textStyle="italic"/>
</RelativeLayout>